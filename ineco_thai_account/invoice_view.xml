								<field name="quantity" invisible="1" />
	        	    		</tree>
	        	    	</field>
	        	    </page>
	        	    <page string="With Holding Tax">
	        	    	<field name="wht_ids" attrs="{'readonly':[('state','=','posted')]}" context="{'default_partner_id': partner_id or False, 'default_wht_type':'sale'}" >
	        	    		<tree string="With Holding Tax">
	        	    			<field name="name" />
	        	    			<field name="date_doc" />
	        	    			<field name="base_amount" />
	        	    			<field name="tax" />
	        	    			<field name="state" />
	        	    			<field name="note" />
	        	    			<button name="button_compute_tax" string="Compute Tax" type="object" />
	        	    		</tree>
	        	    	</field>
	        	    </page>
	        	</page>
		        <field name="journal_id" position="after">
		        	<field name="cheque_id" context="{'default_type':'in'}" domain="[('type','=','in'),('state','=','draft')]"/>
		        </field>	        	       	
			</field>
		</record>    

    	<!-- Supplier Invoice -->
        <record model="ir.ui.view" id="view_ineco_account_supplierinvoice_form">
	      	<field name="name">ineco.account.supplierinvoice.form</field>
	      	<field name="model">account.invoice</field>
