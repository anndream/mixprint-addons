		<!-- Pattern -->
        <record id="view_ineco_pattern_tree" model="ir.ui.view">
            <field name="name">ineco.pattern.tree</field>
            <field name="model">ineco.pattern</field>
            <field name="arch" type="xml">
                <tree string="Pattern" colors="black:late == False;red:late == True">
                    <field name="name" />
                    <field name="product_id" />
                    <field name="product_type_id" />
                    <field name="garment_order_no" />
                    <field name="user_id" />
                    <field name="product_name" />
                    <field name="order_qty" />
                    <field name="saleorder_id" invisible="1" />
                    <field name="partner_id" />
                    <field name="employee_id" />
                    <field name="date_start" />
                    <field name="date_expected" invisible="1" />
                    <field name="sampling_date_process1_finish" string="Cut Finish" />
                    <field name="date_finish_planned" />
                    <field name="date_finish" invisible="1" />
                    <field name="late" invisible="1"/>
                    <field name="state" />
                </tree>
            </field>
        </record>		
 
        <record id="view_ineco_pattern_form" model="ir.ui.view">
            <field name="name">ineco.pattern.form</field>
            <field name="model">ineco.pattern</field>
            <field name="arch" type="xml">
                <form string="Pattern" version="7.0">
                	<header>
                		<button name="button_ready" string="Ready" states="draft,used,damage" type="object" class="oe_highlight" />
                		<button name="button_used" string="Used" states="ready" type="object" class="oe_highlight"/>
                		<button name="button_damage" string="Damage" states="used,ready" type="object" class="oe_highlight"/>
	                    <field name="state" widget="statusbar" statusbar_visible="ready,used,damage" />
                	</header>
                	<sheet>
						<field name="image" widget="image" class="oe_avatar oe_left" />
						<div class="oe_title">
							<div class="oe_edit_only">
								<label for="name" string="Product Name" />
							</div>
							<h1>
								<field name="name" />
							</h1>
						</div>
                		<group>
                			<group>
			                    <!-- <field name="name" /> -->
			                    <field name="saleorder_id" />
			                    <field name="partner_id" />
			                    <field name="employee_id" required="1" />
			                    <field name="last_updated" />
			                    <field name="rev_no" />
                			</group>
                			<group>
			                    <field name="product_id" />
			                    <field name="garment_order_no" />
			                    <field name="garment_order_no_org" />
			                    <field name="sampling_order_no" />
			                    <field name="product_type_id" required="1" />
			                    <field name="location_id" required="1" />
			                    <field name="user_id" />
			                    <field name="is_cancel" />
			                    <field name="active" groups="base.group_erp_manager" />
                			</group>

                				<notebook colspan="4">
                					<page string="Component">
                						<group>
                							<group>
                								<field name="gender_ids" widget="many2many_tags" class="oe_inline" />
                								<button name="button_generate" type="object" string="Generate" />
                							</group>
                							<group>
                								<field name="size_ids" widget="many2many_tags" class="oe_inline" />
                							</group>
                							<group colspan="4">
												<!-- <button name="%(action_ineco_production_copypattern)d" string="Copy Pattern" type="action" icon="gtk-find"/> -->
												<group>
													<field name="pattern_id" />
												</group>
												<group>
													<button name="button_pattern_copy" string="Copy Pattern" type="object" icon="gtk-find"/>
												</group>
												<newline />
                								<field name="component_ids" nolabel="1" colspan="4" >
                									<tree string="Components" editable="top">
                										<field name="seq" />
                										<field name="type_id" />
                										<field name="last_updated" />
                									</tree>
                								</field>
                								<newline />
                								<field name="note" colspan="4" />
                							</group>
                						</group>
                					</page>
                					<page string="Line">
                						<field name="line_ids" nolabel="1">
                							<tree string="Line" editable="top">
                								<field name="name" />
                								<field name="type_id" />
                								<field name="gender_id" />
                								<field name="size_id" />
                							</tree>
                							<form string="Lines">
                								<field name="name" />
                								<field name="type_id" />
                								<field name="gender_id" />
                								<field name="size_id" />
                							</form>
                						</field>
                					</page>
                					<page string="Log">
                						<field name="log_ids" nolabel="1" readonly="1">
                							<tree string="Log">
                								<field name="type" />
                								<field name="user_id" />
                								<field name="last_updated" />
                							</tree>
                						</field>
                					</page>
                					<page string="Images">
                        				<field name="multi_images" widget="image_multi"/>
                    				</page>
                    				<page string="Sampling Date">
                    					<group>
                    						<group string="Pattern">
                    							<field name="sampling_date_start_planned" />
                    							<field name="sampling_date_finish_planned" />
                    						</group>
                    						<group string="Mark">
                    							<field name="sampling_date_mark_start" />
                    							<field name="sampling_date_mark_finish" />
                    							<field name="sampling_marker" />
                    						</group>
                    						<group string="Cut">
                    							<field name="sampling_date_process1_start" />
                    							<field name="sampling_date_process1_finish" />
                    							<field name="sampling_process1_employee" />
                    						</group>
                    						<group string="Sew">
                    							<field name="sampling_date_process2_start" />
                    							<field name="sampling_date_process2_finish" />
                    							<field name="sampling_process2_employee" />
                    						</group>
                    						<group string="Planned">
                    							<field name="sampling_date_start" readonly="1" />
                    							<field name="sampling_date_finish" readonly="1"/>
                    						</group>
                    					</group>
                    				</page>
                    				<page string="Garment Date">
                    					<group>
                    						<group string="Pattern">
                    							<field name="date_start_planned" />
                    							<field name="date_finish_planned" />
                    						</group>
                    						<group string="Mark">
                    							<field name="date_mark_start" />
                    							<field name="date_mark_finish" />
                    							<field name="marker" />
                    						</group>
                    						<group string="Planned">
                    							<field name="date_start" readonly="1" />
                    							<field name="date_finish" readonly="1"/>
                    							<field name="date_expected" readonly="1"/>
                    						</group>
                    					</group>
                    				</page>
                				</notebook>              				
                		</group>
                	</sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>	

        <record model='ir.ui.view' id='view_ineco_pattern_kanban'>
            <field name="name">ineco.pattern.brandkanban</field>
            <field name="model">ineco.pattern</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="image" />
                    <field name="product_id" />
                    <field name="product_type_id" />
                    <templates>
                        <t t-name="kanban-box">
                        	<div class="oe_module_vignette">
                                <a type="open" href="#" class="oe_kanban_action oe_kanban_action_a">
                                    <img t-att-src="kanban_image('ineco.pattern', 'image_small', record.id.value)"/>
                                </a>
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                            <t t-if="record.name.raw_value"><field name="name"/></t>
                                        </li>
                                        <li>
                                            <t t-if="record.product_type_id.raw_value"><field name="product_type_id"/></t>
                                        </li>
                                        
                                    </ul>
                                    
                               </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_ineco_pattern_filter" model="ir.ui.view">
            <field name="name">ineco.pattern.filter</field>
            <field name="model">ineco.pattern</field>
            <field name="arch" type="xml">
                <search string="Pattern">
                    <field name="name" />
                    <field name="product_id" />
                    <field name="product_type_id" />
                    <field name="garment_order_no" />
                    <field name="saleorder_id" />
                    <field name="partner_id" />
                    <field name="employee_id" />
                    <field name="state" />
                    <field name="sampling_date_process1_finish" string="Cut Finish" />
                    <filter name="todo" icon="terp-dolar_ok!" string="To Do" domain="[('state','=','draft'),('date_finish_planned','=',False),('is_cancel','=',False)]" />  
                    <filter name="cancel" icon="terp-dolar_ok!" string="Cancel" domain="[('is_cancel','=',True)]" />         
                  	<group expand="0" string="Group By...">
                        <filter name="by_product_type" string="Product Type" icon="terp-partner" domain="[]" context="{'group_by':'product_type_id'}"/>
                        <filter name="by_date_expected" string="Date Expected" icon="terp-partner" domain="[]" context="{'group_by':'date_expected'}"/>
                        <filter name="by_employee" string="Employee" icon="terp-partner" domain="[]" context="{'group_by':'employee_id'}"/>
                        <filter name="by_late" string="Late" icon="terp-partner" domain="[]" context="{'group_by':'late'}"/>
                        <filter name="by_cut_finish" string="Cut Finish" icon="terp-partner" domain="[]" context="{'group_by':'sampling_date_process1_finish'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_ineco_pattern" model="ir.actions.act_window">
